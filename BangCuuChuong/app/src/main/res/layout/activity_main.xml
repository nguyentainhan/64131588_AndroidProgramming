<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Giao diện câu hỏi -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvSoA"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="Số A"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\t\t+\t\t"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/tvSoB"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="Số B"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDapAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@drawable/input_border"
            android:hint="chọn đáp án"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvKetQua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25dp"
            android:hint="thông báo kết quả ở đây!"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnKiemTra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kiểm tra đáp án"
            android:textSize="20dp"
            android:backgroundTint="#2160F3">
        </Button>

    </LinearLayout>
    <!-- Bố cục bàn phím số (Dùng LinearLayout thay vì GridLayout) -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Hàng 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_margin="2.5dp"
                android:id="@+id/btn1"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="1"/>
            <Button
                android:layout_margin="2.5dp"
                android:id="@+id/btn2"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="2"/>
            <Button
                android:layout_margin="2.5dp"
                android:id="@+id/btn3"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="3"/>
        </LinearLayout>

        <!-- Hàng 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_margin="2.5dp"
                android:id="@+id/btn4"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="4"/>
            <Button
                android:layout_margin="2.5dp"
                android:id="@+id/btn5"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="5"/>
            <Button
                android:layout_margin="2.5dp"
                android:id="@+id/btn6"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="6"/>
        </LinearLayout>

        <!-- Hàng 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_margin="2.5dp"
                android:id="@+id/btn7"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="7"/>
            <Button
                android:layout_margin="2.5dp"
                android:id="@+id/btn8"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="8"/>
            <Button
                android:layout_margin="2.5dp"
                android:id="@+id/btn9"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="9"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
